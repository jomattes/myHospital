<MenuScreen>:
    name: 'menu_screen'

    Image:
        source: 'assets/logo.png'
        keep_ratio: True
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
    
    # AnchorLayout:
    #     anchor_x: 'center'
    #     anchor_y: 'center'
        
    MDFillRoundFlatButton:
        icon: 'android'
        text: 'Start'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: app.root.current = 'search_screen'

<SearchScreen>:
    name: 'search_screen'

    ScrollView:
        MDList:
            OneLineAvatarListItem:
                text: 'Location'
                on_release: app.root.current = 'location_screen'
                IconLeftWidget:
                    icon: 'hospital-box-outline'
            OneLineAvatarListItem:
                text: 'Measure'
                on_release: app.root.current = 'measure_screen'
                IconLeftWidget:
                    icon: 'hospital-box-outline'
            OneLineAvatarListItem:
                text: 'Results'
                on_release: app.root.current = 'results_screen'
                IconLeftWidget:
                    icon: 'hospital-box-outline'

    MDFillRoundFlatButton:
        icon: 'android'
        text: 'Filter Results'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: app.root.current = 'hospital_screen'

    

    # MDDropDownItem:
    #     id: state_drop
    #     pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    #     text:

    # on_enter: root.add_params_list()

<LocationScreen>:
    name: 'location_screen'
    ScrollView:
        MDList:
            OneLineAvatarListItem:
                text: 'Hospital Name'
                IconLeftWidget:
                    icon: 'hospital-box-outline'
            OneLineAvatarListItem:
                text: 'State'
                IconLeftWidget:
                    icon: 'map-marker-question-outline'
            OneLineAvatarListItem:
                text: 'City'
                IconLeftWidget:
                    icon: 'map-marker-question-outline'
            OneLineAvatarListItem:
                text: 'Zip Code'
                IconLeftWidget:
                    icon: 'map-marker-question-outline'
            OneLineAvatarListItem:
                text: 'Distance'
                IconLeftWidget:
                    icon: 'map-marker-question-outline'

<MeasureScreen>:
    name: 'measure_screen'
    on_enter: root.add_meas_list()

    ScrollView:
        MDList:
            id: meas_contain

<ResultsScreen>:
    name: 'results_screen'

<HospitalScreen>:
    name: 'hospital_screen'
    on_enter: root.add_hosp_list()

    ScrollView:
        MDList:
            id: hosp_contain

<DetailScreen>:
    name: 'detail_screen'

    MDLabel:
        id: screen2_label
        halign: 'center'