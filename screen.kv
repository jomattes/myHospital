ScreenManager:
    MenuScreen:
    HospitalScreen:
    DetailScreen:

<MenuScreen>:
    name: 'menu_screen'

    Image:
        source: 'assets/logo.png'
        keep_ratio: True
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
    
    # AnchorLayout:
    #     anchor_x: 'center'
    #     anchor_y: 'center'
        
    MDFillRoundFlatButton:
        icon: 'android'
        text: 'start'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: app.root.current = 'hospital_screen'

<HospitalScreen>:
    name: 'hospital_screen'
    on_enter: root.add_hosp_list()

    ScrollView:
        MDList:
            id: container

<DetailScreen>:
    name: 'detail_screen'

    MDLabel:
        id: screen2_label
        halign: 'center'