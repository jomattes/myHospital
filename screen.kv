ScreenManager:
    MenuScreen:
    HospitalScreen:
    DetailScreen:

<MenuScreen>:
    name: 'menu_screen'
    
    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'center'
        
        MDFillRoundFlatButton:
            icon: 'android'
            text: 'start'
            halign: 'center'
            on_press: app.root.current = 'hospital_screen'

<HospitalScreen>:
    name: 'hospital_screen'
    on_enter: root.add_hosp_list()

    ScrollView:
        MDList:
            id: container

<DetailScreen>:
    name: 'detail_screen'

    MDLabel:
        id: screen2_label
        halign: 'center'