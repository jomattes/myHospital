ScreenManager:
    MenuScreen:
    SearchScreen:
    HospitalScreen:
    DetailScreen:

<MenuScreen>:
    name: 'menu_screen'

    Image:
        source: 'assets/logo.png'
        keep_ratio: True
        size_hint: 0.5, 0.5
        pos_hint: {'center_x': 0.5, 'center_y': 0.7}
    
    # AnchorLayout:
    #     anchor_x: 'center'
    #     anchor_y: 'center'
        
    MDFillRoundFlatButton:
        icon: 'android'
        text: 'start'
        pos_hint: {'center_x': 0.5, 'center_y': 0.3}
        on_press: app.root.current = 'hospital_screen'

<SearchScreen>:
    name: 'search_screen'

    ScrollView:
        MDList:
            OneLineAvatarListItem:
                text: 'State'
                IconLeftWidget:
                    icon: 'map-marker-question-outline'
            OneLineAvatarListItem:
                text: 'City'
                IconLeftWidget:
                    icon: 'map-marker-question-outline'
            OneLineAvatarListItem:
                text: 'Zip Code'
                IconLeftWidget:
                    icon: 'map-marker-question-outline'
            OneLineAvatarListItem:
                text: 'Measure'
                IconLeftWidget:
                    icon: 'hospital-box-outline'

